<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<ScrollPane xmlns:fx="http://javafx.com/fxml" fx:id="scrollPane" fx:controller="com.gui.test.TableController">
    <content>
        <BorderPane>
            <left>
                <VBox spacing="10">
                    <fx:include fx:id="commands" source="commands.fxml"/>
                    <HBox spacing="10">
                        <Label text="Filter by Id:"/>
                        <TextField fx:id="idFilterField"/>
                        <Button text="Filter" onAction="#filterById"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Filter by Name:"/>
                        <TextField fx:id="nameFilterField"/>
                        <Button text="Filter" onAction="#filterByName"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Filter by X:"/>
                        <TextField fx:id="xFilterField"/>
                        <Button text="Filter" onAction="#filterByX"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Filter by Y:"/>
                        <TextField fx:id="YFilterField"/>
                        <Button text="Filter" onAction="#filterByY"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Filter by Price:"/>
                        <TextField fx:id="priceFilterField"/>
                        <Button text="Filter" onAction="#filterByPrice"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Filter by PartNumber:"/>
                        <TextField fx:id="partNumberFilterField"/>
                        <Button text="Filter" onAction="#filterByPartNumber"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Filter by ManufactureCost:"/>
                        <TextField fx:id="manufactureCostFilterField"/>
                        <Button text="Filter" onAction="#filterByManufactureCost"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Filter by UnitOfMeasure:"/>
                        <TextField fx:id="unitOfMeasureFilterField"/>
                        <Button text="Filter" onAction="#filterByUnitOfMeasure"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Filter by OrgId:"/>
                        <TextField fx:id="orgIdFilterField"/>
                        <Button text="Filter" onAction="#filterByOrgId"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Filter by orgName:"/>
                        <TextField fx:id="orgNameFilterField"/>
                        <Button text="Filter" onAction="#filterByOrgName"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Filter by Fullname:"/>
                        <TextField fx:id="fullnameFilterField"/>
                        <Button text="Filter" onAction="#filterByFullname"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Filter by AnnualTurnover:"/>
                        <TextField fx:id="annualTurnoverFilterField"/>
                        <Button text="Filter" onAction="#filterByAnnualTurnover"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Filter by EmployeesCount:"/>
                        <TextField fx:id="EmployeesCountFilterField"/>
                        <Button text="Filter" onAction="#filterByEmployeesCount"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Filter by OrganizationType:"/>
                        <TextField fx:id="OrganizationTypeFilterField"/>
                        <Button text="Filter" onAction="#filterByOrganizationType"/>
                    </HBox>
                </VBox>
            </left>
            <right>
                <VBox alignment="TOP_CENTER" spacing="20.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                    <Label fx:id="titleText" text="%table.title"/>
                    <Label fx:id="userField" text="%table.user"/>
                    <TableView fx:id="tableView"/>
                    <Text fx:id="errorMessage" fill="#F00"/>
                </VBox>
            </right>
        </BorderPane>
    </content>
</ScrollPane>
